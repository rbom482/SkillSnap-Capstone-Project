@page "/projects"
@using SkillSnap.Client.Services
@using SkillSnap.Client.Components
@using SkillSnap.Client.Models
@using Microsoft.AspNetCore.Components.Forms
@inject ProjectService ProjectService
@inject NotificationService NotificationService

<PageTitle>Projects - SkillSnap</PageTitle>

<div class="projects-container">
    <div class="projects-header">
        <h1>My Projects</h1>
        <p>Here are some of the projects I've worked on</p>
    </div>

    <!-- Add New Project Form with Validation -->
    <div class="add-project-section">
        <h3>Add New Project</h3>
        <ValidatedForm Model="@projectForm" 
                       OnValidSubmit="@HandleValidSubmit" 
                       OnInvalidSubmit="@HandleInvalidSubmit"
                       IsSubmitting="@isSubmitting"
                       SubmitButtonText="Add Project"
                       SubmittingText="Adding Project...">
            <div class="form-grid">
                <div class="form-group">
                    <label for="title">Project Title *</label>
                    <InputText @bind-Value="projectForm.Title" class="form-control" id="title" placeholder="Enter project title" />
                    <ValidationMessage For="@(() => projectForm.Title)" />
                </div>

                <div class="form-group">
                    <label for="description">Description *</label>
                    <InputTextArea @bind-Value="projectForm.Description" class="form-control" id="description" 
                                   placeholder="Describe your project" rows="3" />
                    <ValidationMessage For="@(() => projectForm.Description)" />
                </div>

                <div class="form-group">
                    <label for="imageUrl">Image URL</label>
                    <InputText @bind-Value="projectForm.ImageUrl" class="form-control" id="imageUrl" 
                               placeholder="https://example.com/image.jpg" />
                    <ValidationMessage For="@(() => projectForm.ImageUrl)" />
                </div>

                <div class="form-group">
                    <label for="githubUrl">GitHub Repository</label>
                    <InputText @bind-Value="projectForm.GitHubUrl" class="form-control" id="githubUrl" 
                               placeholder="https://github.com/username/repository" />
                    <ValidationMessage For="@(() => projectForm.GitHubUrl)" />
                </div>

                <div class="form-group">
                    <label for="demoUrl">Live Demo URL</label>
                    <InputText @bind-Value="projectForm.LiveDemoUrl" class="form-control" id="demoUrl" 
                               placeholder="https://your-demo-site.com" />
                    <ValidationMessage For="@(() => projectForm.LiveDemoUrl)" />
                </div>

                <div class="form-group">
                    <label for="technologies">Technologies Used</label>
                    <InputText @bind-Value="projectForm.Technologies" class="form-control" id="technologies" 
                               placeholder="C#, Blazor, Entity Framework" />
                    <ValidationMessage For="@(() => projectForm.Technologies)" />
                </div>
            </div>
        </ValidatedForm>
    </div>

    <!-- Enhanced Projects List with ApiListComponent -->
    <ApiListComponent T="Project" 
                      Items="@projects" 
                      IsLoading="@isLoading" 
                      ErrorMessage="@errorMessage"
                      OnRetry="@LoadProjectsAsync"
                      CssClass="projects-grid">
        <ItemTemplate Context="project">
            <div class="project-card">
                <div class="project-image">
                    <img src="@(!string.IsNullOrEmpty(project.ImageUrl) ? project.ImageUrl : $"https://via.placeholder.com/400x200/{GetRandomColor()}/ffffff?text={Uri.EscapeDataString(project.Title)}")" 
                         alt="@project.Title" 
                         loading="lazy" 
                         class="project-thumbnail" />
                    <div class="image-overlay">
                        <span class="project-type">ðŸ’» Web App</span>
                    </div>
                </div>
                <div class="project-content">
                    <h3 class="project-title">@project.Title</h3>
                    <p class="project-description">@project.Description</p>
                    @if (!string.IsNullOrEmpty(project.Technologies))
                    {
                        <p class="project-tech"><strong>Tech:</strong> @project.Technologies</p>
                    }
                    <div class="project-metadata">
                        <small class="text-muted">Created: @project.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                    <div class="project-actions">
                        @if (!string.IsNullOrEmpty(project.GitHubUrl))
                        {
                            <a href="@project.GitHubUrl" target="_blank" class="btn btn-primary btn-sm" rel="noopener">
                                <i class="fab fa-github"></i> GitHub
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(project.LiveDemoUrl))
                        {
                            <a href="@project.LiveDemoUrl" target="_blank" class="btn btn-outline-secondary btn-sm" rel="noopener">
                                <i class="fas fa-external-link-alt"></i> Demo
                            </a>
                        }
                        <button @onclick="() => DeleteProjectAsync(project.Id)" 
                                class="btn btn-danger btn-sm" 
                                disabled="@isDeleting"
                                title="Delete project">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </ItemTemplate>
        <EmptyTemplate>
            <div class="empty-state-custom">
                <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
                <h3>No Projects Yet</h3>
                <p>Start showcasing your work by adding your first project above!</p>
            </div>
        </EmptyTemplate>
    </ApiListComponent>
</div>

