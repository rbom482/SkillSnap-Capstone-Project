@code {
    private List<Project>? projects;
    private ProjectFormModel projectForm = new();
    private bool isLoading = false;
    private bool isSubmitting = false;
    private bool isDeleting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadProjectsAsync();
    }

    private async Task LoadProjectsAsync()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            
            projects = await ProjectService.GetProjectAsync();
            
            if (projects.Count == 0)
            {
                NotificationService.ShowInfo("No projects found. Add your first project to get started!");
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load projects. Please try again.";
            NotificationService.ShowError(errorMessage);
            Console.WriteLine($"Error loading projects: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleValidSubmit(EditContext context)
    {
        try
        {
            isSubmitting = true;
            
            var project = projectForm.ToProject();
            var result = await ProjectService.AddProjectAsync(project);
            
            if (result.IsSuccess)
            {
                NotificationService.ShowSuccess($"Project '{project.Title}' added successfully!");
                projectForm.Reset();
                await LoadProjectsAsync();
            }
            else
            {
                NotificationService.ShowError(result.ErrorMessage ?? "Failed to add project.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("An unexpected error occurred while adding the project.");
            Console.WriteLine($"Error adding project: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private async Task HandleInvalidSubmit(EditContext context)
    {
        NotificationService.ShowWarning("Please correct the errors in the form before submitting.");
    }

    private async Task DeleteProjectAsync(int id)
    {
        try
        {
            isDeleting = true;
            
            var project = projects?.FirstOrDefault(p => p.Id == id);
            if (project == null) return;

            var success = await ProjectService.DeleteProjectAsync(id);
            
            if (success)
            {
                NotificationService.ShowSuccess($"Project '{project.Title}' deleted successfully.");
                await LoadProjectsAsync();
            }
            else
            {
                NotificationService.ShowError("Failed to delete project. Please try again.");
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError("An error occurred while deleting the project.");
            Console.WriteLine($"Error deleting project: {ex.Message}");
        }
        finally
        {
            isDeleting = false;
            StateHasChanged();
        }
    }

    /// <summary>
    /// Generates a random color for project placeholder images to create visual variety
    /// </summary>
    private string GetRandomColor()
    {
        var colors = new[] { "4A90E2", "7B68EE", "50E3C2", "F5A623", "D0021B", "9013FE", "00C851", "FF6900" };
        return colors[new Random().Next(colors.Length)];
    }
