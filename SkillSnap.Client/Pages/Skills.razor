@page "/skills"
@using SkillSnap.Client.Services
@inject SkillService SkillService

<PageTitle>Skills - SkillSnap</PageTitle>

<div class="skills-container">
    <div class="skills-header">
        <h1>My Skills</h1>
        <p>Technologies and tools I work with</p>
    </div>

    <!-- Add New Skill Form -->
    <div class="add-skill-section">
        <h3>Add New Skill</h3>
        <div class="skill-form">
            <input @bind="newSkill.Name" placeholder="Skill Name" class="form-input" />
            <select @bind="newSkill.Level" class="form-select">
                <option value="">Select Level</option>
                <option value="Beginner">Beginner</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Advanced">Advanced</option>
                <option value="Expert">Expert</option>
            </select>
            <button @onclick="AddSkillAsync" class="btn btn-success" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Adding...</span>
                }
                else
                {
                    <span>Add Skill</span>
                }
            </button>
        </div>
    </div>

    <div class="skills-sections">
        @if (skillGroups == null)
        {
            <div class="loading">Loading skills...</div>
        }
        else if (skillGroups.Count == 0)
        {
            <div class="no-skills">No skills found. Add your first skill above!</div>
        }
        else
        {
            @foreach (var group in skillGroups)
            {
                <div class="skill-category">
                    <h3 class="category-title">@group.Level (@group.Count skills)</h3>
                    <div class="skills-tags">
                        @foreach (var skill in group.Skills)
                        {
                            <span class="skill-tag @GetSkillLevelClass(skill.Level)">
                                <span class="skill-name">@skill.Name</span>
                                <span class="skill-level">@skill.Level</span>
                                <button @onclick="() => DeleteSkillAsync(skill.Id)" class="skill-delete" title="Delete skill">Ã—</button>
                            </span>
                        }
                    </div>
                </div>
            }
        }
    </div>

    <div class="skills-legend">
        <h4>Proficiency Levels</h4>
        <div class="legend-items">
            <span class="legend-item">
                <span class="skill-tag beginner-level">Beginner</span>
            </span>
            <span class="legend-item">
                <span class="skill-tag intermediate-level">Intermediate</span>
            </span>
            <span class="legend-item">
                <span class="skill-tag advanced-level">Advanced</span>
            </span>
            <span class="legend-item">
                <span class="skill-tag expert-level">Expert</span>
            </span>
        </div>
    </div>
</div>

<style>
    .skills-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem;
    }

    .skills-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .skills-header h1 {
        color: #333;
        margin-bottom: 1rem;
    }

    .skills-header p {
        color: #666;
        font-size: 1.1rem;
    }

    .skills-sections {
        margin-bottom: 3rem;
    }

    .skill-category {
        margin-bottom: 2.5rem;
    }

    .category-title {
        color: #333;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid #007bff;
        display: inline-block;
    }

    .skills-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .skill-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        cursor: default;
    }

    .skill-tag:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    .skill-name {
        font-weight: 600;
    }

    .skill-level {
        font-size: 0.8rem;
        opacity: 0.8;
    }

    .beginner-level {
        background-color: #f8f9fa;
        color: #6c757d;
        border: 2px solid #dee2e6;
    }

    .intermediate-level {
        background-color: #fff3cd;
        color: #856404;
        border: 2px solid #ffeaa7;
    }

    .advanced-level {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 2px solid #b8daff;
    }

    .expert-level {
        background-color: #d4edda;
        color: #155724;
        border: 2px solid #c3e6cb;
    }

    .skills-legend {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 8px;
        border-left: 4px solid #007bff;
    }

    .skills-legend h4 {
        margin-bottom: 1rem;
        color: #333;
    }

    .legend-items {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .legend-item .skill-tag {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
    }

    @@media (max-width: 768px) {
        .skills-container {
            padding: 1rem;
        }

        .skills-tags {
            gap: 0.5rem;
        }

        .skill-tag {
            font-size: 0.8rem;
            padding: 0.4rem 0.8rem;
        }

        .legend-items {
            justify-content: center;
        }
    }

    .add-skill-section {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 3rem;
    }

    .add-skill-section h3 {
        color: #333;
        margin-bottom: 1rem;
    }

    .skill-form {
        display: grid;
        gap: 1rem;
        grid-template-columns: 1fr 1fr auto;
        align-items: end;
    }

    .form-input, .form-select {
        padding: 0.75rem;
        border: 2px solid #e9ecef;
        border-radius: 6px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

    .form-input:focus, .form-select:focus {
        outline: none;
        border-color: #007bff;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    .btn-success:disabled {
        background-color: #6c757d;
        cursor: not-allowed;
    }

    .loading, .no-skills {
        text-align: center;
        padding: 3rem;
        color: #666;
        font-size: 1.1rem;
    }

    .skill-delete {
        background: rgba(255, 255, 255, 0.8);
        border: none;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-size: 14px;
        color: #dc3545;
        font-weight: bold;
        transition: all 0.2s ease;
    }

    .skill-delete:hover {
        background: #dc3545;
        color: white;
        transform: scale(1.1);
    }

    @@media (max-width: 768px) {
        .skill-form {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
    }
</style>

@code {
    private List<SkillGroup>? skillGroups;
    private Skill newSkill = new();
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadSkillsAsync();
    }

    private async Task LoadSkillsAsync()
    {
        // Load skills grouped by level for user ID 1 (for testing)
        skillGroups = await SkillService.GetSkillsByUserGroupedAsync(1);
    }

    private async Task AddSkillAsync()
    {
        if (string.IsNullOrWhiteSpace(newSkill.Name) || string.IsNullOrWhiteSpace(newSkill.Level))
        {
            return;
        }

        isLoading = true;

        // Set a default PortfolioUserId for testing (you might want to get this from user context)
        newSkill.PortfolioUserId = 1;

        var createdSkill = await SkillService.AddSkillAsync(newSkill);
        
        if (createdSkill != null)
        {
            // Reload skills to show the new one
            await LoadSkillsAsync();
            
            // Reset form
            newSkill = new Skill();
        }

        isLoading = false;
        StateHasChanged();
    }

    private async Task DeleteSkillAsync(int id)
    {
        var success = await SkillService.DeleteSkillAsync(id);
        
        if (success)
        {
            // Reload skills to remove the deleted one
            await LoadSkillsAsync();
            StateHasChanged();
        }
    }

    private string GetSkillLevelClass(string level)
    {
        return level.ToLower() switch
        {
            "beginner" => "beginner-level",
            "intermediate" => "intermediate-level",
            "advanced" => "advanced-level",
            "expert" => "expert-level",
            _ => "beginner-level"
        };
    }
}
