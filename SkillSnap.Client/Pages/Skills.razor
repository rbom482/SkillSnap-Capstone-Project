        },
        ["Databases"] = new List<Skill>
        {
            new Skill { Id = 11, Name = "SQL Server", Level = "Advanced" },
            new Skill { Id = 12, Name = "SQLite", Level = "Advanced" },
            new Skill { Id = 13, Name = "Entity Framework", Level = "Advanced" },
            new Skill { Id = 14, Name = "MongoDB", Level = "Intermediate" }
        },
        ["Tools & Technologies"] = new List<Skill>
        {
