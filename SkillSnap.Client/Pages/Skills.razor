    private string GetSkillLevelClass(string level)
    {
        return level.ToLower() switch
        {
            "beginner" => "beginner-level",
            "intermediate" => "intermediate-level",
            "advanced" => "advanced-level",
            "expert" => "expert-level",
            _ => "beginner-level"
        };
    }
}
